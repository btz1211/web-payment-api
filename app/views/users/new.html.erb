<legend><h1>Sign up</h1></legend>
<form name="sign-up-form" id="sign-up-form" action="/api/v1/users" method="post">
  <div class="alert alert-dismissible alert-danger" hidden="true">
    <span class="payment-errors"></span>
  </div>
  <fieldset>
    <div class="col-lg-12 row">
      <div class="col-lg-6">
        <div class="form-group">
          <label for="email" class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <input type="text" class="form-control" name="email"></input>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="form-group">
          <label for="password" class="col-lg-3 control-label">Password:</label>
          <div class="col-lg-8">
            <input type="password" class="form-control" name="password"></input>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-12 row">
      <div class="col-lg-6">
        <div class="form-group">
          <label for="firstName" class="col-lg-3 control-label">First Name:</label>
          <div class="col-lg-8">
            <input type="text" class="form-control" name="firstName"></input>
          </div>
        </div>
      </div>

      <div class="col-lg-6">
        <div class="form-group">
          <label for="lastName" class="col-lg-3 control-label">Last Name:</label>
          <div class="col-lg-8">
            <input type="text" class="form-control" name="lastName"></input>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-12 row">
      <h4 class="form-subheader">Credit Card Information:</h4>
    </div>

    <div class="col-lg-12 row">
      <div class="col-lg-6">
        <div class="form-group">
          <label for="cardNumber" class="col-lg-3 control-label">Card Number:</label>
          <div class="col-lg-8">
            <input type="text" class="form-control" name="cardNumber" data-stripe="number"></input>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label class="col-lg-3 control-label">Expiration (MM/YY)</label>
          <input type="text" size="2" data-stripe="exp_month" name="expirationMonth">
          <span> / </span>
          <input type="text" size="2" data-stripe="exp_year" name="expirationYear">
        </div>
      </div>
    </div>

    <div class="col-lg-12 row">
      <div class="col-lg-6">
        <div class="form-group">
          <label for="cvc" class="col-lg-3 control-label">CVC:</label>
          <div class="col-lg-8">
            <input type="text" class="form-control" name="cvc" data-stripe="cvc"></input>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-12 row">
      <div class="col-lg-6"></div>
      <div class="col-lg-6">
        <button class="btn btn-primary btn-sign-up" onclick="signUp()">submit</button>
      </div>
    </div>

  </fieldset>
</form>
